@model SportBlog.ViewModel.PostsViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form method="post" enctype="multipart/form-data" asp-controller="PostsPerUser" asp-action="Create">

    @*<form asp-action="Create">*@
    <div class="form-border">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Title" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Title" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Body" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <textarea asp-for="Body" class="form-control"></textarea>
                    </div>
                </div>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="PostImage" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input class="form-control" type="file" name="hey" />
                    </div>
                </div>
                <span asp-validation-for="PostImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label class="custom-label">Tags</label>
                    </div>
                    <div class="col-sm-4">
                        <ul>
                            @for (var i = 0; i < Model.Tags.Count(); i++)
                            {
                                <li>
                                    <input type="checkbox" asp-for="@Model.Tags[i].IsSelected" />
                                    <label asp-for="@Model.Tags[i].IsSelected">@Model.Tags[i].Description</label>
                                    <input type="hidden" asp-for="@Model.Tags[i].TagId" />
                                    <input type="hidden" asp-for="@Model.Tags[i].Description" />
                                    <input type="hidden" asp-for="@Model.Tags[i].CreatedBy" />

                                </li>

                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="UserId" hidden class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="UserId" type="hidden" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="UserId" hidden class="text-danger"></span>
            </div>
       
            <br />
            <div class="form-group">
                <input type="submit" value="Add Post" class="btn btn-sm btn-primary" />
                <a asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-sm btn-success">Back to List</a>
            </div>
        </div>
    
        
        <input asp-for="UserId" type="hidden" />
</form>
