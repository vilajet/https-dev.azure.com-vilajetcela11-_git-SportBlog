@model SportBlog.Models.Comment
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Comment" asp-action="Create">

    <div class="form-border">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Message" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <textarea asp-for="Message" class="form-control"></textarea>
                </div>
            </div>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="CreatedBy" hidden class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="CreatedBy" type="hidden" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="CreatedBy" hidden class="text-danger"></span>
            </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Add Comment" class="btn btn-sm btn-primary" />
        </div>
    </div>
    <input asp-for="PostId" type="hidden" />
    <input asp-for="UserId" type="hidden" />
</form>
